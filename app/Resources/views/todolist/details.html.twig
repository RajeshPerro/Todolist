{% extends 'base.html.twig' %}

{% block body %}

    <div class="row" style="margin-top:80px; margin-left: 50px">
    <a href="/" class="btn btn-primary">Back to TodoList</a>
    </div>
<div class="row">
<div class="col-md-2">
</div>
<div class="col-md-6">
<h2 class="page-header">{{ todo.name }}</h2><hr>
</div>
</div>

<div class="row">
<div class="col-md-2">
</div>
<div class="col-md-4">
<ul class="list-group">
   <li class="list-group-item"> Category : {{ todo.category }}</li>
   <li class="list-group-item"> Due Date : {{ todo.startDateTime  | date("F j,y, g:i:a")}}</li>
   <li class="list-group-item"> Create / Update Date : {{ todo.createDate | date("F j,y, g:i:a")}}</li>
   <li class="list-group-item"> Priority : {{ todo.priority}}</li>
   <li class="list-group-item"> Details : {{ todo.description }}</li>
</ul>
</div>
</div>
<hr>

{% endblock %}

{% block stylesheets %}

{% endblock %}

